.upload-page{
  height: 100%;
}
.upload-top{
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc
}
.left{
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1
}
.center{
  flex: 5;
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  display: flex;
  align-items: center;


}
.title{
  padding-left: 30rpx;
  font-size: 36rpx;
  color: #8a8a8a;
}
.right{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.back{
  width: 54rpx;
  height: 54rpx;
}
.add{
  width: 48rpx;
  height: 48rpx;
}
.upload-main{
  background-color: #fff;
  height: calc(100% - 105rpx);
  padding: 0 40rpx 0 ;
}
.upload-main-block{
  width: 100%;
  /* background-color: #f00; */
  display: flex;
  flex-wrap: wrap;
}
.upload-main-block-item{
  width: 200rpx;
  height: 250rpx;
  /* background-color: #ff0; */
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-left:20rpx;
}
.item-text{
  height: 50rpx;
  color: #8a8a8a;
  font-size: 32rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
.item-img{
  width: 100%;
  height: 100%;
  border-radius: 20rpx
}
/* rename */

.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
}

.toastbg {
  opacity: 0.2;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 80%;
  margin-left: 15%;
  margin-top: 40%;
}

.toast-title {
  font-size: 36rpx;
  padding-left: 5%;
  background-color: #fff;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
  text-align: center;
}

.toast-main {
  padding-top: 2vh;
  padding-bottom: 2vh;
  background-color: white;
  
}

.toast-input {
  margin-left: 5%;
  margin-right: 5%;
  border: 1px solid #ddd;
  padding-left: 2vh;
  padding-right: 2vh;
  padding-top: 1vh;
  padding-bottom: 1vh;
}
.delete-input{
  margin-left: 5%;
  margin-right: 5%;
  padding-left: 2vh;
  padding-right: 2vh;
  padding-top: 1vh;
  padding-bottom: 2vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column
}

.toast-button {
  display: flex;
}

.button1 {
  width: 50%;
}

.button2 {
  width: 50%;
}

.button1 button {
  width: 100%;
  background-color: white;
  color: #8a8a8a;
  border-radius: 0px;
  border-bottom-left-radius: 16rpx;
}

.button2 button{
  width: 100%;
  background-color: rgb(0, 178, 106);
  color: #fff;
  border-radius: 0px;
  border-bottom-right-radius: 16rpx;
}

.picker {
  padding-top: 1vh;
  padding-bottom: 1vh;
}
.delete-button{
  display: flex;
}
.delete-button .button1 button{
  width: 100%;
  background-color: white;
  color: #000;
  border-radius: 0px;
  border-bottom-left-radius: 16rpx;
}
.delete-button .button2 button{
  width: 100%;
  background-color: #fff;
  color: #f00;
  border-radius: 0px;
  border-bottom-right-radius: 16rpx;
}

