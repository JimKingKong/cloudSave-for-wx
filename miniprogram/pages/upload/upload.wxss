.upload-page{
  height: 100%;
}
.upload-top{
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc
}
.left{
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1
}
.center{
  flex: 5;
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  display: flex;
  align-items: center;


}
.title{
  padding-left: 30rpx;
  font-size: 36rpx;
  color: #8a8a8a;
}
.right{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.back{
  width: 54rpx;
  height: 54rpx;
}
.add{
  width: 48rpx;
  height: 48rpx;
}
.upload-main{
  background-color: #fff;
  height: calc(100% - 105rpx);
  padding: 0 40rpx 0 ;
}
.upload-main-block{
  width: 100%;
  /* background-color: #f00; */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between
  
}
.upload-main-block-item{
  width: 200rpx;
  height: 250rpx;
  /* background-color: #ff0; */
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}
.item-text{
  height: 50rpx;
  color: #8a8a8a;
  font-size: 32rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
.item-img{
  width: 100%;
  height: 100%;
  border-radius: 20rpx
}
