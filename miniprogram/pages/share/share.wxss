/* pages/share/share.wxss */
.share-page {
  height: 100%;
}

.share-title {
  color: #515151;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  font-size: 32rpx;
  box-shadow: 0 1rpx 1rpx 1rpx #ccc;
  background: white;

}
.share-scroll{
  height: calc(100% - 100rpx);
  width: 100%;
  background-color: white;
}
button::after{
  border: none
}
.btn-share{
 background-color: #fff;
 border: 1rpx solid #fff
}
.btn-share-img{
  width: 48rpx;
  height: 48rpx;
}