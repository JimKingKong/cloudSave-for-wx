page{
  background-color: #eaebea
}
.total{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center
}
.avatar{
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
}
.line{
  height: 2rpx;
  width: 80%;
  background: #cccccc;
}
.continue-text{
  margin-top: 50rpx;
  width: 80%;
  color: #4e4e4e;
  font-size: 32rpx;
}
.des{
  width: 80%;
  color: #9d9d9d;
  font-size: 26rpx;

  margin: 20rpx 0rpx;
  /* background: pink; */
  position: relative;
}
.dot{
  position: absolute;
  top: 20rpx;
  left: 20rpx;

  width: 5rpx;
  height: 5rpx;
  border-radius: 50%;
  background: #9d9d9d;
}

.check-btn{
  width: 80%;
  height: 90rpx;
  font-size: 36rpx;
  background: #ff6802;
  color: white;
  margin: 50rpx;
}
.des text:nth-of-type(2){
  margin-left: 40rpx;
}
.hover-class-style{
  opacity: 0.9
}